{
  "name": "mxbuildy",
  "version": "1.0.0",
  "description": "Simplistic library for generating static sites",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "tests"
  ],
  "scripts": {
    "build": "ts-node --files src/index.ts",
    "build-css": "node-sass ./src/theme/styles/index.scss -o ./dist",
    "watch": "nodemon",
    "watch-css": "node-sass ./src/theme/styles/index.scss -o ./dist -w",
    "serve": "live-server dist",
    "start": "npm-run-all --parallel watch watch-css serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decoy/mxbuildy.git"
  },
  "author": "Kel Piffner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/decoy/mxbuildy/issues"
  },
  "homepage": "https://github.com/decoy/mxbuildy#readme",
  "devDependencies": {
    "@types/highlight.js": "^9.12.3",
    "@types/markdown-it": "0.0.8",
    "@types/node": "^12.6.8",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "highlight.js": "^9.15.9",
    "markdown-it": "^9.0.1"
  }
}
